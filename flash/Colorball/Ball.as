package{	import flash.display.Sprite;	import flash.events.Event;		public class Ball extends Sprite	{		private var _xPos:int;		private var _yPos:int;		private static var _radius:int;		private static var _color:uint;		private static var _lineWidth:int;				private var _newBlurFilter:Blurfilter = new Blurfilter(2, 2, 1, this);		public function Ball(xPos:int, yPos:int, radius:int, color:uint, lineWidth:int)		{			this._xPos = xPos;			this._yPos = yPos;			Ball._radius = radius;			Ball._color = color;			Ball._lineWidth = lineWidth						drawBall();			setPosition(xPos, yPos);		}				private function drawBall():void		{			this.graphics.beginFill(Ball._color, 0.1);			this.graphics.lineStyle(Ball._lineWidth, Ball._color);			this.graphics.drawCircle(0, 0, Ball._radius);			//this.graphics.drawCircle(0, 0, (Ball._radius/3));			this.graphics.endFill();		}				public function setInnerOpacity(opacity:Number):void		{			this.graphics.clear();			this.graphics.beginFill(Ball._color, opacity);			this.graphics.lineStyle(Ball._lineWidth, Ball._color);			this.graphics.drawCircle(0, 0, Ball._radius);			this.graphics.endFill();		}				protected function setPosition(xPos:int, yPos:int):void		{			this.x = xPos;			this.y = yPos;		}	}	}