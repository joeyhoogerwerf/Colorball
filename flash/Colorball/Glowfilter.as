package{		import flash.filters.DropShadowFilter;		public class Glowfilter{				public function Glowfilter(distance:Number, angle:Number, color:uint, alphaAmount, blurX:Number, blurY:Number, strength:Number, quality:Number, inner:Boolean, knockout:Boolean, hideObject:Boolean, obj:Object){						var myTempFilters: Array = obj.filters;			var myGlow:DropShadowFilter = new flash.filters.DropShadowFilter(distance, angle, color, alphaAmount, blurX, blurY, strength, quality, inner, knockout, hideObject);			myTempFilters.push(myGlow);			obj.filters = myTempFilters;		}	}}