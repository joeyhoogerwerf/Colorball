package {	import flash.display.Sprite;	import flash.events.Event;		public class FlagRectangle extends Sprite	{		private var _xPos:int;		private var _yPos:int;		private var _widthRectangle:int;		private var _heightRectangle:int;		private var _color:uint;				private var _newBlurFilter:Blurfilter = new Blurfilter(2, 2, 1, this);				public function FlagRectangle(xPos:int, yPos:int, widthRectangle:int, heightRectangle:int, color:uint)		{			this._xPos = xPos;			this._yPos = yPos;			this._widthRectangle = widthRectangle;			this._heightRectangle = heightRectangle;			this._color = color;						drawRectangle();			setPosition();		}		private function drawRectangle():void		{			this.graphics.beginFill(this._color, 0.1);			this.graphics.lineStyle(2, this._color);			this.graphics.drawRect(0, 0, this._widthRectangle, this._heightRectangle);			this.graphics.endFill();		}				private function setPosition():void		{			this.x = this._xPos;			this.y = this._yPos;		}				public function drawActiveRectangle():void		{			this.graphics.clear();			this.graphics.beginFill(this._color, 0.5);			this.graphics.lineStyle(2, this._color);			this.graphics.drawRect(0, 0, this._widthRectangle, this._heightRectangle);			this.graphics.endFill();		}	}	}