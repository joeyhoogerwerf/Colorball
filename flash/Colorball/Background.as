package  {	import flash.display.Sprite;	import flash.display.Stage;	import flash.display.Shape;	import flash.geom.Matrix;	import flash.display.GradientType;	/**	 * ...	 * @author J. Hoogerwerf	 */	public class Background extends Sprite 	{		private var _widthBG:int = 800;		private var _heightBG:int = 600;				private var _topColor:uint		private var _bottomColor:uint;				//private var _newBlurFilter:Blurfilter = new Blurfilter(5, 5, 1, this);				public function Background(widthBG:int, heightBG:int, topColor:uint, bottomColor:uint) 		{			trace("topcolor: " + topColor);			this._widthBG = widthBG;			this._heightBG = heightBG;			this._topColor = topColor;			this._bottomColor = bottomColor;						drawBackground();		}				//DRAWS A BACKGROUND				private function drawBackground():void		{			var sprite0:Sprite = new Sprite();			var sprite1:Sprite = new Sprite();			var sprite2:Sprite = new Sprite();			var sprite3:Sprite = new Sprite();			var sprite4:Sprite = new Sprite();						var matrix:Matrix = new Matrix();			var colors:Array = [ this._topColor, this._bottomColor];			var alphas:Array = [ 0.9, 0.9];			var ratios:Array = [ 0, 255];						sprite1.graphics.beginFill(0x0000ff, 0.25);			sprite1.graphics.drawEllipse(130, 5, 780, 3);			sprite1.graphics.endFill();						sprite2.graphics.beginFill(0xff0000, 0.25);			sprite2.graphics.drawEllipse(20, 635, 980, 2);			sprite2.graphics.endFill();						sprite3.graphics.beginFill(0x00ff00, 0.25);			sprite3.graphics.drawEllipse(5, 20, 2, 580);			sprite3.graphics.endFill();						sprite4.graphics.beginFill(0xffff00, 0.25);			sprite4.graphics.drawEllipse(1035, 20, 2, 580);			sprite4.graphics.endFill();						var _newBlurFilter:Blurfilter = new Blurfilter(2, 2, 1, sprite0);						matrix.createGradientBox(1000, (this._heightBG - 8), (Math.PI / 180) * 90, 0, 0); 						sprite0.graphics.beginGradientFill(GradientType.LINEAR,colors, alphas, ratios, matrix);			sprite0.graphics.lineStyle(1, 0x000000);			sprite0.graphics.drawRoundRect(0, 0, 1000, this._heightBG, 8, 8);			sprite0.graphics.endFill();						addChild(sprite0);			//addChild(sprite1); 			//addChild(sprite2); 			//addChild(sprite3); 			//addChild(sprite4); 		}			}}