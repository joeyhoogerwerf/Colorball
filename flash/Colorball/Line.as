package{	import flash.display.Sprite;	import flash.geom.ColorTransform;		public class Line extends Sprite	{				private var _xPosStart:int;		private var _yPosStart:int;		private var _xPosEnd:int;		private var _yPosEnd:int;		private var _color:uint;				private var _newBlurFilter:Blurfilter = new Blurfilter(1.5, 2, 1, this);				public function Line(xPosStart:int, yPosStart:int, xPosEnd:int, yPosEnd:int, color:uint)		{			this._xPosStart = xPosStart;			this._yPosStart = yPosStart;			this._xPosEnd = xPosEnd;			this._yPosEnd = yPosEnd;			this._color = color;						drawLine();			colorThisLine();						this.alpha = 0.80;						trace("xPosStart line: " + this._xPosStart);		}				private function drawLine():void		{			this.graphics.lineStyle(2);			this.graphics.moveTo(this._xPosStart, this._yPosStart);			this.graphics.lineTo(this._xPosEnd, this._yPosEnd);		}				private function colorThisLine():void		{			var myColor:ColorTransform = this.transform.colorTransform;			myColor.color = this._color;			this.transform.colorTransform = myColor;		}				public function setAlpha(amountAlpha:int):void		{			this.alpha = amountAlpha;		}				public function get xPosStart():int{			return this._xPosStart;		}				public function get yPosStart():int{			return this._yPosStart;		}				public function get xPosEnd():int{			return this._xPosEnd;		}				public function get yPosEnd():int{			return this._yPosEnd;		}	}	}