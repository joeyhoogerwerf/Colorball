package{	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFieldAutoSize;	import flash.utils.Timer;	import flash.events.Event;	import flash.events.TimerEvent;	import flash.events.KeyboardEvent;	import flash.text.Font;		public class GameTimer extends Sprite	{		private var _newScoreTF:TextField = new TextField();		private var _newTextFormat:TextFormat = new TextFormat();		private var _newFont:Font = new ColorballFont();		private var _newBlurFilter:Blurfilter = new Blurfilter(1.5, 2, 1, this);				private var _gameTime:Number = 60.000; // SECONDS				private var _newTimer:Timer = new Timer(1);		private var _newEyeCandyTimer:Timer = new Timer(1);				private var _timerIsLocked:Boolean;				private var _isTicking:Boolean;		public function GameTimer(stageWidth:int, color:uint)		{			showScoreTF(stageWidth, color);						addChild(_newScoreTF);						_newTimer.addEventListener(TimerEvent.TIMER, onTimer);		}				private function showScoreTF(stageWidth:int, color:uint):void		{			_newScoreTF.x = 0;			_newScoreTF.y = 80;			_newScoreTF.width = stageWidth;						_newTextFormat.font = this._newFont.fontName;			_newTextFormat.size = 26;			_newTextFormat.color = color;			_newTextFormat.align = "center";									_newScoreTF.defaultTextFormat = _newTextFormat;			_newScoreTF.embedFonts = true;						_newScoreTF.text = "Time [60.000]";		}				private function onTimer(e:TimerEvent):void		{			this._gameTime -= 0.011;						_newScoreTF.text = "Time [" + String(this._gameTime).substr(0,6) + "]";		}				public function startTimer():void		{			if(this._timerIsLocked != true)				this._newTimer.start();		}				public function stopTimer():void		{			this._newTimer.stop();		}				public function resetTimer():void		{			this._gameTime = 60;			_newScoreTF.text = "Time: [60.00]";			this._timerIsLocked = false;		}				public function colorSwitch(color:uint):void		{			_newTextFormat.color = color;			_newScoreTF.defaultTextFormat = _newTextFormat;						trace("COLOR" + color);						_newScoreTF.text = "Time: [" + String(this._gameTime).substr(0,6) + "]";		}				public function get timerIsLocked():Boolean		{			return this._timerIsLocked;		}				public function set timerIsLocked(i:Boolean):void		{			this._timerIsLocked = i;		}	}	}