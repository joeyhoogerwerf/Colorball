package  {	import flash.filters.BlurFilter;	import flash.filters.GlowFilter;		public class Glowfilter	{		public function Glowfilter(color:uint, alphaAmount:Number, blurX:Number, blurY:Number, strength:Number, quality:int, inner:Boolean, knockout:Boolean, obj:Object) 		{			//APPLY BLUR FILTER			var myTempFilters: Array = obj.filters;			var myGlow:GlowFilter = new flash.filters.GlowFilter(color, alphaAmount, blurX, blurY, strength, quality, inner, knockout);			myTempFilters.push(myGlow);			obj.filters = myTempFilters;		}			}}