package{	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFieldAutoSize;	import flash.text.Font;		public class StageDetails extends Sprite	{		private var _newDetailsTF:TextField = new TextField();		private var _newTextFormat:TextFormat = new TextFormat();		private var _newFont:Font = new ColorballFont();		private var _newBlurFilter:Blurfilter = new Blurfilter(1.5, 2, 1, this);		public function StageDetails(stageNr:int, stageName:String, stageWidth:int, color:uint)		{			displayTF(stageNr, stageName, stageWidth, color);		}				private function displayTF(stageNr:int, stageName:String, stageWidth:int, color:uint):void		{			_newTextFormat.color = color;			_newTextFormat.size = 28;			_newTextFormat.font = this._newFont.fontName;			_newTextFormat.align = "center";			_newDetailsTF.defaultTextFormat = _newTextFormat;						_newDetailsTF.width = stageWidth;			_newDetailsTF.y = 30;						_newDetailsTF.text = "Stage [" + stageNr + "] " + stageName + "";						addChild(this._newDetailsTF);		}	}	}