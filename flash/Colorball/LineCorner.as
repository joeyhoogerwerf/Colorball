package{		import flash.display.Sprite;		public class LineCorner extends Sprite{		private var _xPos:int;		private var _yPos:int;		private var _widthSquare:int;		private var _color:uint;		public function LineCorner(xPos:int, yPos:int, widthSquare:int, color:uint){						this._xPos = xPos;			this._yPos = yPos;			this._widthSquare = widthSquare;			this._color = color;						drawSquare();		}				private function drawSquare():void{						this.graphics.beginFill(this._color, 1);			this.graphics.drawRect(this._xPos, this._yPos, this._widthSquare, this._widthSquare);			this.graphics.endFill();		}				public function get xPos():int{			return this._xPos;		}				public function get yPos():int{			return this._yPos;		}	}}